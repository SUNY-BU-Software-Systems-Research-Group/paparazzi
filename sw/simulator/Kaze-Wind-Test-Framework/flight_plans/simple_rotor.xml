<!DOCTYPE flight_plan SYSTEM "flight_plan.dtd">

<flight_plan alt="152" ground_alt="147" lat0="43 33 50.83" lon0="1 28 52.61" max_dist_from_home="150" name="Rotorcraft Basic (Enac)" security_height="2">
  <header>
#include "autopilot.h"
  </header>
  <waypoints>
    <waypoint name="HOME" x="0.0" y="0.0"/>
    <waypoint name="CLIMB" x="0.0" y="5.0"/>
    <waypoint name="p1" x="3.6" y="-13.9"/>
    <waypoint name="p2" x="27.5" y="-48.2"/>
  </waypoints>
  <blocks>
    <block name="Wait GPS">
      <call_once fun="NavKillThrottle()"/>
      <while cond="!GpsFixValid()"/>
    </block>
    <block name="Geo init">
      <while cond="LessThan(NavBlockTime(), 10)"/>
      <call_once fun="NavSetGroundReferenceHere()"/>
      <!--<call_once fun="NavSetAltitudeReferenceHere()"/>-->
      <attitude pitch="0" roll="0" throttle="0" vmode="throttle" until="NavBlockTime()>2"/>
    </block>
    <block name="Start Engine">
      <call_once fun="NavResurrect()"/>
      <attitude pitch="0" roll="0" throttle="0" vmode="throttle" until="NavBlockTime()>5"/>
    </block>
    <block name="Takeoff">
      <exception cond="stateGetPositionEnu_f() @DEREF z @GT 2.0" deroute="Oval"/>
      <call_once fun="NavSetWaypointHere(WP_CLIMB)"/>
      <stay vmode="climb" climb="nav_climb_vspeed" wp="CLIMB"/>
    </block>
    <block name="Oval">
      <oval p1="p1" p2="p2" radius="-3" until="NavBlockTime()>60"/>
    </block>
    <block name="land">
      <go wp="HOME"/>
    </block>
    <block name="flare">
      <exception cond="NavDetectGround()" deroute="landed"/>
      <call_once fun="NavStartDetectGround()"/>
      <stay climb="nav_descend_vspeed" vmode="climb" wp="HOME"/>
    </block>
    <block name="landed">
      <call_once fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" vmode="throttle" until="FALSE"/>
    </block>
  </blocks>
</flight_plan>
